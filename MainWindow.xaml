<Window x:Class="Sloths.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sloths"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        xmlns:wpf="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF">

    <Window.Resources>
        <Style x:Key="choiceButtons">
            <Setter Property="ItemsControl.Margin" Value="0 3 0 3" />
            <Setter Property="ItemsControl.Width" Value="20" />
            <Setter Property="ItemsControl.Height" Value="20" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="0, 0, 2, 0">
            <ToolBarPanel x:Name="Tools">
                <Button x:Name="line" Style="{StaticResource choiceButtons}">
                    L
                </Button>
                <Button x:Name="circle" Style="{StaticResource choiceButtons}">
                    C
                </Button>
                <Button x:Name="rectangle" Style="{StaticResource choiceButtons}">
                    R
                </Button>
            </ToolBarPanel>
        </Border>

        <wpf:OpenGLControl OpenGLDraw="OpenGLControl_OpenGLDraw"
                           OpenGLInitialized="OpenGLControl_OpenGLInitialized"
                           Resized="OpenGLControl_Resized"
                           DrawFPS="True"
                           Grid.Row="1"
                           Grid.Column="1"/>
    </Grid>
</Window>

<Window x:Class="Sloths.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        xmlns:local="clr-namespace:Sloths"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="NoResize"
        SourceInitialized="Window_SourceInitialized"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen" ><!--WindowState="Maximized">-->
    <!---->

    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition  Height="329*" ></RowDefinition>
            <RowDefinition  Height="362*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*"></ColumnDefinition>
            <ColumnDefinition Width="9*"></ColumnDefinition>
            <ColumnDefinition Width="3.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="LightGray" BorderThickness="0 0 2 0" Grid.ColumnSpan="1" Margin="0,0,0,4.8">
            <StackPanel>
                <Menu Height="20">
                    <MenuItem x:Name="Menu" VerticalAlignment="Center" Header="Меню" Height="24">
                        <MenuItem x:Name="Saver" Header="Save"></MenuItem>
                        <MenuItem x:Name="Loader" Header="Load"></MenuItem>
                    </MenuItem>
                </Menu>
                <Grid x:Name="SelectTools" Margin="5px" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="32*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Button Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="1" x:Name="SelectMode" Content="{materialDesign:PackIcon cursorpointer}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                        Width="60" Margin="16,0,16,15"/>

                    <Button Grid.Column="0" Grid.Row="1" x:Name="ColorPicker" Content="{materialDesign:PackIcon colorize}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="ColorPicker" Height="60"
                        Width="60" Margin="16,0,16,15"/>

                    <Button Grid.Column="0" Grid.Row="2" x:Name="Undo" Content="{materialDesign:PackIcon undo}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="Undo" Height="60"
                        Width="60" Margin="16,0,16,15"/>

                    <Button Grid.Column="1" Grid.Row="2" x:Name="Redo" Content="{materialDesign:PackIcon redo}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="Redo" Height="60"
                        Width="60" Margin="16,0,16,15"/>

                    <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" x:Name="Delete" Content="{materialDesign:PackIcon delete}"  Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="Delete" Height="60"
                        Width="60" Margin="16,35,16,15"/>
                </Grid>
            </StackPanel>
        </Border>
        <Border Grid.Column="0" Grid.Row="1" Margin="0,11.2,0,0.4"
                BorderBrush="LightGray" BorderThickness="0 0 2 0" 
                Grid.ColumnSpan="1">
            <StackPanel Margin="0 5 0 0">
                <Grid Margin="0 3 0 0" x:Name="MoveTools">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="13*"/>
                        <RowDefinition Height="13*"/>
                        <RowDefinition Height="13*"/>
                        <RowDefinition Height="13*"/>
                        <RowDefinition Height="13*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="0" Grid.ColumnSpan="2" 
                            Grid.Row="0" x:Name="UpButton" 
                            Content="{materialDesign:PackIcon arrowup}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="10,0,10,2"/>
                    <Button Grid.Column="1" Grid.ColumnSpan="1" 
                            Grid.Row="1" x:Name="RightButton" 
                            Content="{materialDesign:PackIcon arrowright}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="16,0,16,0"/>
                    <Button Grid.Column="0" Grid.ColumnSpan="1" 
                            Grid.Row="1" x:Name="LeftButton" 
                            Content="{materialDesign:PackIcon arrowleft}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="16,0,16,0"/>
                    <Button Grid.Column="0" Grid.ColumnSpan="2" 
                            Grid.Row="2" x:Name="DownButton" 
                            Content="{materialDesign:PackIcon arrowdown}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="10,0,10,2"/>
                    <Button Grid.Column="1" Grid.ColumnSpan="1" 
                            Grid.Row="3" x:Name="RRotateButton" 
                            Content="{materialDesign:PackIcon rotateright}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="10,10,10,10"/>
                    <Button Grid.Column="0" Grid.ColumnSpan="1" 
                            Grid.Row="3" x:Name="LRotateButton" 
                            Content="{materialDesign:PackIcon rotateleft}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="10,10,10,10"/>
                    <Button Grid.Column="1" Grid.ColumnSpan="1" 
                            Grid.Row="4" x:Name="PlusSizeButton" 
                            Content="{materialDesign:PackIcon magnifyplusoutline}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="10,10,10,10"/>
                    <Button Grid.Column="0" Grid.ColumnSpan="1" 
                            Grid.Row="4" x:Name="MinusSizeButton" 
                            Content="{materialDesign:PackIcon magnifyminusoutline}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="SelectFigure" Height="60"
                            Width="60" Margin="10,10,10,10"/>
                </Grid>
            </StackPanel>
        </Border>

        <wpf:OpenGLControl x:Name = "DrawingPanel"
                        OpenGLDraw="OpenGLControl_OpenGLDraw"
                        OpenGLInitialized="OpenGLControl_OpenGLInitialized"
                        Resized="OpenGLControl_Resized"
                        Grid.Column="1" Grid.RowSpan="2"
                        OpenGLVersion="OpenGL4_4" 
                        FrameRate="60" RenderContextType="DIBSection" DrawFPS="True"/>



        <Border Grid.Column="2" Margin="0.2,0,0.4,0" BorderBrush="LightGray" BorderThickness="2 0 0 0">
            <StackPanel Margin="0 5 0 0">
                <Grid Margin="0 3 0 0" x:Name="FigureSelect">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="33*"/>
                        <RowDefinition Height="32*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="65*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"/>
                        <RowDefinition Height="0*"></RowDefinition>
                    </Grid.RowDefinitions>


                    <Button Grid.Column="0" Grid.Row="0" x:Name="Line"  Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="Line" Height="60"
                        Width="60" Margin="16,0,16,15">
                        <Image  Source="straight-line-icon.jpg"/>
                    </Button>

                    <Button Grid.Column="0" Grid.Row="1" x:Name="Triangle2" Content="{materialDesign:PackIcon triangle}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="IsoscelesTriangle" Height="60"
                        Width="60" Margin="16,0,16,15"/>
                    <Button Style="{DynamicResource MaterialDesignRaisedAccentButton}" Grid.Column="1" Grid.Row="1" x:Name="Triangle" ToolTip="RightTriangle" Height="60"
                        Width="60" Margin="16,0,14,15" VerticalAlignment="Bottom">
                        <Image  Source="right-triangle.png" Height="18" />
                    </Button>

                    <Button Grid.Column="0" Grid.Row="2" x:Name="Circle" Content="{materialDesign:PackIcon circle}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="Circle" Height="60"
                        Width="60" Margin="16,0,14,5"/>

                    <Button Grid.Column="1" Grid.Row="0" x:Name="Rectangle" Content="{materialDesign:PackIcon rectangle}" Style="{DynamicResource MaterialDesignRaisedAccentButton}" ToolTip="Rectangle" Height="60"
                        Width="60" Margin="16,0,14,15"/>


                </Grid>



            </StackPanel>
        </Border>

        <Border Grid.Column="2" Grid.Row="1" Margin="0.2,11.2,-0.4,0.4" BorderBrush="LightGray" BorderThickness="2 0 0 0">
            <StackPanel  Margin="23,0,22,0" x:Name="BrushSettingsContainer" Height="auto">
                <Label>Толщина Кисти</Label>
                <Slider x:Name= "ThickSlider" Value="1" Minimum="1" Maximum="10" SelectionStart="0" Height="30" IsSelectionRangeEnabled="True" />
                <!-- Не уверен, что работать с калор пикером будет удобно. Поэтому юзер просто может вводить цвет в поле ниже. Но если разберетесь будет найс -->
                <Label>Цвет</Label>
                <TextBlock x:Name="CurrentColor" HorizontalAlignment="Center" Width="100" Background="Black"></TextBlock>
                <Label>Выбор цвета</Label>
                <StackPanel>
                    <Grid x:Name="ColorPick">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Column="0" Grid.Row="0" Margin="0,3,0,3" x:Name="Black" HorizontalAlignment="Center" Width="50" Background="Black"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="0" Margin="0,3,0,3" x:Name="Gray" HorizontalAlignment="Center" Width="50" Background="Gray"></TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="1" Margin="0,3,0,3" x:Name="Brown" HorizontalAlignment="Center" Width="50" Background="Brown"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="1" Margin="0,3,0,3" x:Name="Red" HorizontalAlignment="Center" Width="50" Background="Red"></TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="2" Margin="0,3,0,3" x:Name="Orange" HorizontalAlignment="Center" Width="50" Background="Orange"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="2" Margin="0,3,0,3" x:Name="Yellow" HorizontalAlignment="Center" Width="50" Background="Yellow"></TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="3" Margin="0,3,0,3" x:Name="Green" HorizontalAlignment="Center" Width="50" Background="Green"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="3" Margin="0,3,0,3" x:Name="LightBlue" HorizontalAlignment="Center" Width="50" Background="LightBlue"></TextBlock>
                        <TextBlock Grid.Column="0" Grid.Row="4" Margin="0,3,0,3" x:Name="Blue" HorizontalAlignment="Center" Width="50" Background="Blue"></TextBlock>
                        <TextBlock Grid.Column="1" Grid.Row="4" Margin="0,3,0,3" x:Name="Purple" HorizontalAlignment="Center" Width="50" Background="Purple"></TextBlock>
                    </Grid>
                </StackPanel>
                <!--<ComboBox SelectedIndex="0" Name="ColorList" Height="30" VerticalAlignment="Top">
                    
                </ComboBox>-->
                <TextBox x:Name= "ColorTextBox" Margin = "0,5 0,3" Style="{DynamicResource MaterialDesignTextBox}" MaxLength="7">#ffffff</TextBox>
                <Button x:Name="brushColorOk" Margin="36,15,49,15" Content="Ок" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
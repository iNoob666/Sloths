<Window x:Class="Sloths.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        xmlns:local="clr-namespace:Sloths"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="700"
        SourceInitialized="Window_SourceInitialized">


    <Grid>
        <Grid.RowDefinitions>
            
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
            <Grid x:Name="Tools" Margin="5px" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
                <Button Grid.Column="0" Grid.Row="0" x:Name="Line" Content="{materialDesign:PackIcon chartlinevariant}"  ToolTip="Icon" Margin="0 5 0 5">
                    
                </Button>
                <Button Grid.Column="0" Grid.Row="0" x:Name="Triangle" Content="{materialDesign:PackIcon triangle}" ToolTip="Icon" Margin="0 0 0 5">

                </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Circle" Content="{materialDesign:PackIcon circle}" ToolTip="Icon" Margin="0 0 0 5">
                    
                </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Rectangle" Content="{materialDesign:PackIcon rectangle}" ToolTip="Icon" Margin="0 0 0 5">

            </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="ColorPicker" Content="{materialDesign:PackIcon colorize}" ToolTip="Icon" Margin="0 0 0 5">

            </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Brush" Content="{materialDesign:PackIcon brush}" ToolTip="Icon" Margin="0 0 0 5">

            </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Undo" Content="{materialDesign:PackIcon undo}" ToolTip="Icon" Margin="0 0 0 5">

            </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Redo" Content="{materialDesign:PackIcon redo}" ToolTip="Icon" Margin="0 0 0 5">
                    
                </Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Save" Content="{materialDesign:PackIcon contentsave}" ToolTip="Icon" Margin="0 0 0 5">
					
				</Button>
            <Button Grid.Column="0" Grid.Row="0" x:Name="Load" Content="{materialDesign:PackIcon folderupload}" ToolTip="Icon" Margin="0 0 0 5">
					
				</Button>
            </Grid>
        

        <wpf:OpenGLControl x:Name = "DrawingPanel"
                           OpenGLDraw="OpenGLControl_OpenGLDraw"
                           OpenGLInitialized="OpenGLControl_OpenGLInitialized"
                           Resized="OpenGLControl_Resized"
                           Grid.Row="1"
                           Grid.Column="1"/>
    </Grid>
</Window>
